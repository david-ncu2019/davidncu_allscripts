   "source": [
    "files = glob(os.path.join(\"calib_input/\", \"*.csv\"))\n",
    "files"
   ]
  },
  {
   "cell_type": "markdown",
   "id": "4d5b1bfb-3f90-4dfe-9bba-df4da6f9f1b7",
   "metadata": {},
   "source": [
    "#### calculate the average velocity for MLCW and InSAR"
   ]
  },
  {
   "cell_type": "raw",
   "id": "cca94af3-d1c3-48c9-856d-a205936ec11c",
   "metadata": {},
   "source": [
    "# f = files[0]\n",
    "for f in files:\n",
    "    df = pd.read_csv(f)\n",
    "    df[\"time\"] = pd.to_datetime(df[\"time\"])\n",
    "\n",
    "    current_layer = [col for col in df.columns if col.startswith(\"Layer\")][0]\n",
    "\n",
    "    available_stations = df[\"STATION\"].unique()\n",
    "\n",
    "    cache = {\n",
    "        \"STATION\": [],\n",
    "        \"MLCW_vel\": [],\n",
    "        \"InSAR_vel\": [],\n",
    "        \"X_TWD97\": [],\n",
    "        \"Y_TWD97\": [],\n",
    "    }\n",
    "\n",
    "    # select_station = available_stations[0]\n",
    "    for select_station in available_stations:\n",
    "\n",
    "        df_station = df.query(\"STATION==@select_station\")\n",
    "\n",
    "        datetime_indices = df_station[\"time\"]\n",
    "\n",
    "        df_station = df_station.set_index(\"time\")\n",
    "\n",
    "        start_time = df_station.index[0]\n",
    "        end_time = df_station.index[-1]\n",
    "\n",
    "        full_date_range = pd.date_range(start_time, end_time)\n",
    "\n",
    "        df_full = pd.DataFrame(data=None, index=full_date_range)\n",
    "\n",
    "        for col in [current_layer, \"CUMDISP\"]:\n",
    "            df_full[col] = df_full.index.map(df_station[col])\n",
    "\n",
    "        mlcw_velocity = (\n",
    "            analysis.get_linear_trend(df_full[current_layer])[-1] * 365.25\n",
    "        )  # mm/year\n",
    "        insar_velocity = (\n",
    "            analysis.get_linear_trend(df_full[\"CUMDISP\"])[-1] * 365.25\n",
    "        )\n",
    "\n",
    "        x_twd97 = df_station[\"X_TWD97\"].unique()[0]\n",
    "        y_twd97 = df_station[\"Y_TWD97\"].unique()[0]\n",
    "        for key, val in zip(\n",
    "            cache.keys(),\n",
    "            [select_station, mlcw_velocity, insar_velocity, x_twd97, y_twd97],\n",
    "        ):\n",
    "            cache[key].append(val)\n",
    "\n",
    "    final_table = pd.DataFrame(cache)\n",
    "    geo_final_table = geospatial.convert_to_geodata(\n",
    "        df=final_table,\n",
    "        xcoord_col=\"X_TWD97\",\n",
    "        ycoord_col=\"Y_TWD97\",\n",
    "        crs_epsg=\"EPSG:3826\",\n",
    "    )\n",
    "\n",
    "    savename = os.path.basename(f).replace(\".csv\", \".shp\")\n",
    "    geo_final_table.to_file(os.path.join(\"output_shp\", savename))"
   ]
  },
